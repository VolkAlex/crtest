{% extends 'base.html.twig' %}

{% block body %}
    <h1>Discount</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ discount.id }}</td>
            </tr>
            <tr>
                <th>Products</th>
                <td>{{ discount.products }}</td>
            </tr>
            <tr>
                <th>Sex</th>
                <td>{{ discount.sex }}</td>
            </tr>
            <tr>
                <th>Isphone</th>
                <td>{% if discount.isphone %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Phonelastnum</th>
                <td>{{ discount.phonelastnum }}</td>
            </tr>
            <tr>
                <th>Begin</th>
                <td>{% if discount.begin %}{{ discount.begin|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>End</th>
                <td>{% if discount.end %}{{ discount.end|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Discount</th>
                <td>{{ discount.discount }}</td>
            </tr>
            <tr>
                <th>Isbornbefore</th>
                <td>{% if discount.isbornbefore %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Isbornafter</th>
                <td>{% if discount.isbornafter %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('discount_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('discount_edit', { 'id': discount.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
